<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!-- load asset -->

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Image Homepage" customize_show="False">
      <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_homepage/static/src/js/examples.js"></script>
            <link rel='stylesheet' href='/website_homepage/static/src/css/examples.css'/>
            <link rel='stylesheet' href='/website_homepage/static/src/css/homepage.css'/>
            <link rel='stylesheet' href='/website_homepage/static/src/css/jquery.fullPage.css'/>
            <script type="text/javascript" src="/website_homepage/static/src/js/homepage.js"></script>
            <script type="text/javascript" src="/website_homepage/static/src/js/jquery.slimscroll.min.js"></script>
            <script type="text/javascript" src="/website_homepage/static/src/js/jquery.fullPage.js"></script>.
        </xpath>
    </template>

    <!-- Create homepage -->
    
    <template id="homepage" inherit_id="website.homepage" name="Homepage">
        <xpath expr="//div[@id='wrap']" position="replace">
            <div id="fullpage">
                <div class="section " id="section0">
                    <header class="new-header col-md-12"> 
                        <h1 class="logo col-md-3">
                            
                        </h1> 
                        <nav class="col-md-9">
                            <ul>
                                <li><a href="/">Home</a></li>
                                <li><a href="/page/website.contactus">Contact us</a></li>
                                <li>services</li>
                                <li><a href="/blog">Blog</a></li>
                            </ul>
                        </nav>
                    </header>
                    <video autoplay="" loop="" muted="" id="myVideo">
                        <source src="/website_homepage/static/src/img/flowers.mp4" type="video/mp4"/>
                        <source src="/website_homepage/static/src/img/flowers.webm" type="video/webm"/>
                    </video>
                    <div class="layer">
                        <h1>You will love our service</h1>
                    </div>
                </div>
                <div class="section" id="section1">
                    <div class="slide" id="slide1">
                        <div class="intro">
                            <h1>Clickable</h1>
                            <p>
                                You can even click on the navigation and jump directly to another section.
                            </p>
                        </div>
                    </div>
            
                    <div class="slide" id="slide2">
                        <h1>Slide 2</h1>
                    </div>
            
                </div>
                <div class="section" id="section2">
                    <div class="intro">
                        <h1>Enjoy it</h1>
                    </div>
                </div>
                <div class="section" id="section3">
                    <div class="intro">
                        <h1>Love it</h1>
                    </div>
                </div>
                <div class="section" id="section4">
                    <div class="intro">
                        <h1>Just do it</h1>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</data>
</openerp>
